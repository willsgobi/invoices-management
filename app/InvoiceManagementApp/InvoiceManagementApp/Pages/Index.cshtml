@page
@using System.Globalization
@using System.Text.Json
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .chart-container {
        position: relative;
        width: 100%;
        height: 400px;
        max-height: 500px;
        overflow: hidden;
    }

    canvas {
        width: 100% !important;
        height: 100% !important;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <span class="display-6 mt-5">Relatórios</span>
        <hr />
        <div class="col">
            @await Html.PartialAsync("_FiltersCard", Model.FilterModel)
            @await Html.PartialAsync("_DashboardCards", Model.ApiResponse)
            @await Html.PartialAsync("_ReportsGraph", Model.ApiResponse)
        </div>
    </div>
</div>
